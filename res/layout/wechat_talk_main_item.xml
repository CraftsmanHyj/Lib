<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/talkTvRecorderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="0â€³"
            android:textColor="#ff777777" />

        <FrameLayout
            android:id="@+id/talkFlRecorderLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chatto_bg_focused"
            android:focusable="true" >

            <View
                android:id="@+id/talkVRecorderAnim"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/adj" />
        </FrameLayout>

        <ImageView
            android:id="@+id/talkImgHeader"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon" />
    </LinearLayout>

</RelativeLayout>