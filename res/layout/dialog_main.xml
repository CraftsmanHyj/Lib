<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/dialogRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <RadioButton
                android:id="@+id/dialogRb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="showMessageDialog(Context,String,String,okAction)" />

            <RadioButton
                android:id="@+id/dialogRb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="showMessageDialog(Context,String,String)" />

            <RadioButton
                android:id="@+id/dialogRb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="showMessageDialog(Context,String)" />

            <RadioButton
                android:id="@+id/dialogRb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="showMessageDialog(Context,String,Throwable,okAction)" />

            <RadioButton
                android:id="@+id/dialogRb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="showMessageDialog(Context,String,Throwable)" />

            <RadioButton
                android:id="@+id/dialogRb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="showMessageDialog(Context,Throwable,okAction)" />

            <RadioButton
                android:id="@+id/dialogRb7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="showMessageDialog(Context,Throwable)" />

            <RadioButton
                android:id="@+id/dialogRb8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="showConfirmDialog(Context,String,String,okAction,cancelAction)" />

            <RadioButton
                android:id="@+id/dialogRb9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="showConfirmDialog(Context,String,String,okAction)" />

            <RadioButton
                android:id="@+id/dialogRb10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="showDialog(Context,String,View,okAction,cancelAction)" />

            <RadioButton
                android:id="@+id/dialogRb11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="showDialog(Context,String,View,okAction)" />

            <RadioButton
                android:id="@+id/dialogRb12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="showDialog(Context,String,View)" />
        </RadioGroup>
    </LinearLayout>

</ScrollView>