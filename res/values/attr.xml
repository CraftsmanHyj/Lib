<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="text_icon" format="reference" />
    <attr name="text" format="string" />
    <attr name="text_size" format="reference|dimension" />
    <attr name="text_color" format="reference|color" />
    <attr name="rightPadding" format="dimension" />
    <attr name="position">
        <enum name="left_top" value="0" />
        <enum name="left_bottom" value="1" />
        <enum name="right_top" value="2" />
        <enum name="right_bottom" value="3" />
    </attr>
    <attr name="radius" format="dimension" />
    <attr name="expandlevel" format="reference|integer" />

    <!-- 循环播放广告位属性 -->
    <attr name="iscycle" format="boolean" />
    <attr name="wheeltime" format="integer" />
    <attr name="indicatorposition">
        <enum name="left" value="0x003" />
        <enum name="center" value="0x004" />
        <enum name="right" value="0x005" />
    </attr>

    <!-- 微信6.0属性 -->
    <declare-styleable name="TabView">
        <attr name="text_icon" />
        <attr name="text_color" />
        <attr name="text" />
        <attr name="text_size" />
    </declare-styleable>

    <!-- 自定义title属性 -->
    <declare-styleable name="title">
        <attr name="titleText" format="string" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="titleColor" format="color" />
        <attr name="leftTextColor" format="color" />
        <attr name="leftBackground" format="reference|color" />
        <attr name="leftText" format="string" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightBackground" format="reference|color" />
        <attr name="rightText" format="string" />
    </declare-styleable>

    <!-- 放QQ5.0侧滑菜单 -->
    <declare-styleable name="qq50">
        <attr name="rightPadding" />
    </declare-styleable>

    <!-- 星型菜单自定义属性 -->
    <declare-styleable name="arcmenu">
        <attr name="position" />
        <attr name="radius" />
    </declare-styleable>

    <!-- 树形组件属性 -->
    <declare-styleable name="tree">
        <attr name="expandlevel" />
    </declare-styleable>

    <!-- 循环播放广告位属性 -->
    <declare-styleable name="imagecycle">
        <attr name="iscycle" />
        <attr name="wheeltime" />
        <attr name="indicatorposition" />
    </declare-styleable>

    <!-- 刮刮乐 -->
    <declare-styleable name="scratch">
        <attr name="text" />
        <attr name="text_size" />
        <attr name="text_color" />
    </declare-styleable>

    <!-- 拼图游戏 -->
    <declare-styleable name="jigsaw">
        <attr name="drawable" format="reference" />
        <attr name="timelimit" format="boolean" />
    </declare-styleable>

    <!-- ViewPager指示器 -->
    <declare-styleable name="indicator">

        <!-- 可见的tab总数 -->
        <attr name="visibletablecount" format="integer" />
    </declare-styleable>

</resources>